<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <h2>商品新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-borderless">
       <%= form_with model:@product, url:admin_products_path, local: true do |f| %>
         <tbody>
          <tr>
        　    <td><%= f.label :商品画像 %></td>
             <td><%= f.attachment_field :image, placeholder:'写真' %></td>
           </tr>
           <tr>
        　    <td><%= f.label :商品名 %></td>
             <td><%= f.text_field :product_name ,class: "form-control" %></td>
           </tr>
           <tr>
        　    <td><%= f.label :商品説明 %></td>
             <td><%= f.text_area :product_introduction ,class: "form-control" %></td>
           </tr>
           <tr>
        　    <td><%= f.label :制作会社 %></td>
             <td><%= f.text_field :product_company ,class: "form-control" %></td>
           </tr>
           <tr>
             <td><%= f.label :ジャンル %></td>
             <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "Select"}, {class: 'btn btn-outline-dark'} %></td>
           </tr>
           <tr>
             <td><%= f.label :金額 %></td>
             <td><%= f.number_field :product_price, min: "1"  %></td>
           </tr>
           <tr>
              <td><%= f.submit "新規登録" %></td>
           </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>