<div class="container">
  <ul>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
         <%= render partial: 'layouts/flash' %>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-1">
        <h2>イベント詳細 <i class="fas fa-candy-cane"></i></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-6 offset-1">
        <span>イベント</span>
        <h4><%= @event.title %></h4>
        <span>内容</span>
        <h4><%= @event.content %></h4>
        <span>日にち</span>
        <h4><%= @event.start_time %></h4>
      <%= link_to "イベント一覧に戻る", admin_events_path , class: "btn btn-info btn-sm" %>
      <%= link_to "編集する", edit_admin_event_path(@event), class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </ul>
</div>