<div class="container">
  <ul>
    <div class="row">
      <div class="col-4 offset-2">
        <h2>イベント一覧 <i class="fas fa-store-alt"></i></h2>
      </div>
      <div class="col-2 offset-3" style="padding-top: 22px;">
        <%= link_to new_admin_event_path do %>
          <%= image_tag 'new_create.jpg', size: "50x50" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
          <% @events.each do |event| %>
            <%= link_to(admin_event_path(event), class: "list-group-item list-group-item-action") do %>
              <%= event.title %>
            <% end %>
          <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-4">
          <%= paginate @events, theme: 'twitter-bootstrap-4'%>
      </div>
    </div>
  </ul>
</div>
