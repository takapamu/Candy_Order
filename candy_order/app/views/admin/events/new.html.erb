<div class='container'>
  <ul>
    <div class='row'>
      <div class='col-4 offset-1'>
        <h2>イベント登録</h2>
      </div>
    </div>
    <div class='row'>
      <div class='col-8 offset-4'>
          <%= render partial: 'layouts/flash' %>
　     <%= form_with model: @event,url: admin_events_path, local: true do |f| %>
         <%= render 'layouts/error_messages', model: f.object %>
          <div class='form-group'>
            <label>タイトル</label><br>
            <%= f.text_field :title %>
          </div>
          <div class='form-group'>
            <label>開始日</label><br>
            <%= f.date_select :start_time %>
          </div>
          <div class='form-group'>
            <label>内容</label><br>
            <%= f.text_field :content %>
          </div>
          <div class='form-group'>
            <%= f.submit '登録する', class:'btn btn-lg btn-outline-dark' %>
          </div>
        <% end %>
      </div>
    </ul>
  </div>