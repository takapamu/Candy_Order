<div class='container'>
  <ul>
    <div class='row'>
      <div class='col-sm-7 offset-2' style="padding-right: 50px;">
       <h2 class="heading06" data-en="Edit Event"></h2>
      </div>
    </div>
    <div class="contact-form">
    <div class='row'>
      <div class='col-sm-6 offset-3'>
         <%= render partial: 'layouts/flash' %>
        <%= form_with model:@event,url: admin_event_path, local: true do |f| %>
         <%= render 'layouts/error_messages', model: f.object %>
      </div>
      <div class='col-sm-8 offset-3' style="padding-left: 50px;">
       <div class="form-field">
          <%= f.text_field :title, class: "input-text js-input" %>
          <label class="label" for="name">Event_Title</label>
        </div>
        <div class="form-field">
          <%= f.text_area :content, class: "input-text js-input" %>
          <label class="label" for="name">Event_Content</label>
        </div>
        <div class="form-field">
          <label style="margin-right: 40px; margin-left: 30px">Start_Time</label>
          <%= f.date_select :start_time , class: "input-text js-input" %>
        </div>
          <div class='form-group' style="text-align: center; padding-right: 300px">
            <%= f.submit '登録する', class:'btn btn-outline-dark' %>
          </div>
        <% end %>
      </div>
      </div>
    </ul>
  </div>