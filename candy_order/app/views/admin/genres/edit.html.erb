<div class="container">
  <ul>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
         <%= render partial: 'layouts/flash' %>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="heading06" data-en="Edit Genre"></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <%= form_for(@genre, url: admin_genre_path(@genre)) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
      </div>
      <div class="col-3 offset-2" style="text-align: center;">
        <%= f.label :name %>
      </div>
      <div class="col-3">
        <div class="form-group">
          <%= f.text_field :name,class:"form-control" %>
        </div>
      </div>
      <div class="col-2">
        <%= f.submit '更新する', class: "btn btn-outline-dark"%>
      </div>
        <% end %>
      </div>
    </div>
  </ul>
</div>