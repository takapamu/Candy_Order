<div class="container">
  <ul>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
         <%= render partial: 'layouts/flash' %>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-1">
        <h2>ジャンル一覧 <i class="fas fa-cookie-bite"></i></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-5 offset-1">
        <div class='newitem'>
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group">
              <label for='inputName title'>Genre_name</label><br>
              <%= f.text_field :name, autofocus: true, id:'inputName' %>
              <%= f.submit '登録する', class:'btn  btn-outline-dark' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-5 offset-1">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th></th>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre)%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </ul>
</div>