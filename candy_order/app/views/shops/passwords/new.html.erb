<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <h2>パスワードをお忘れですか?</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-3">
      
      <%= form_for(resource, as: resource_name, url: new_shop_password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "shops/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="actions">
          <%= f.submit "パスワード再発行" %>
        </div>
      <% end %>
      
      <%= render "shops/shared/links" %>
    </div>
  </div>
</div>
