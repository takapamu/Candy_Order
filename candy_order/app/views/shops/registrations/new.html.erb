 <div class="container">
   <ul>
     <div class="row ">
        <div class="col-8 offset-4">
          <h1>新規登録</h1>
        </div>
      </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-7 offset-2">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shops/shared/error_messages", resource: resource %>
  
          <div class="field">
            <%= f.label :name, class: "under"   %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.text_field :name, class: "form-control"  %>
          </div>
  
          <div class="field">
            <%= f.label :email, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control"%>
          </div>
  
          <div class="field">
            <%= f.label :postal_code, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.text_field :postal_code,class: "form-control"  %>
          </div>
  
          <div class="field">
            <%= f.label :address, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.text_field :address,class: "form-control"  %>
          </div>
  
          <div class="field">
            <%= f.label :telephone_number, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.text_field :telephone_number,class: "form-control"  %>
          </div>
  
          <div class="field">
            <%= f.label :password, class: "under" %><span style="color: #FF0000" >＊必須</span>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control"%>
          </div>
  
          <div class="field">
            <%= f.label :password_confirmation, class: "under" %><span style="color: #FF0000" >＊必須</span><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-1"></div>
        <div class="col-8">
          <div class="form" style="margin: 20px;" >
             <input type="submit" class="reset flat border2" value="新規登録">
          </div>
        <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-8 offset-3">
          <h4>既に会員登録済みの方</h4>
          <%= render "shops/shared/links" %>
      </div>
    </div>
  </ul>
</div>