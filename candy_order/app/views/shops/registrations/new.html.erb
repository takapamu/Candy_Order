<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "shops/shared/error_messages", resource: resource %>

     　　<div class="col-xs-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :postal_code %>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :address %>
          <%= f.text_field :address,class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :telephone_number %>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 桁以上)</em>
          <% end %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="actions" style="margin: 15px 0;">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "shops/shared/links" %>
    </div>
  </div>
</div>