 <div class="container">
   <ul>
     <div class="row ">
        <div class="col-9 offset-2">
          <h1>新規登録</h1>
        </div>
      </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-8 offset-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shops/shared/error_messages", resource: resource %>
      </div>
      <div class="col-8 offset-3">
        <table class="table table-borderless">
          <tbody>
           <tr>
             <td><%= f.label :name %></td>
             <td><%= f.text_field :name, class: "form-control",placeholder: ""%></td>
           </tr>
            <tr>
              <td><%= f.label :email  %></td>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code %></td>
              <td><%= f.text_field :postal_code,class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :address %></td>
              <td><%= f.text_field :address,class: "form-control"  %></td>
            </tr>
           <tr>
             <td><%= f.label :telephone_number %></td>
             <td><%= f.text_field :telephone_number,class: "form-control"  %></td>
           </tr>
           <tr>
             <td><%= f.label :password %>(<%= @minimum_password_length %>文字以上)</td>
             <td>
               <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
             </td>
           </tr>
            <tr>
             <td><%= f.label :password_confirmation %></td>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control"  %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-7 offset-1">
        <div class="form" style="margin: 20px; padding-left: 120px;" >
           <input type="submit" class="reset flat border2" value="新規登録">
        </div>
      <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-4" style="padding-left: 70px">
        <h4>既に会員登録済みの方</h4>
         <p>
          <%= link_to  new_session_path(resource_name) do %>
           <%= image_tag "login_icon.jpg",size: "50x50",alt: "ログイン",align: "top"%>
           <span style="color: black;">ログイン</span>
          <% end %>
        </p>
      </div>
    </div>
  </ul>
</div>