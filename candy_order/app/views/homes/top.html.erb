<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>ようこそ CandyOrderへ</h1>
    </div>
  </div>
  <div class="row">
      <div class="icon">
       <%= image_tag 'candy.png', class:'icon' %>
      </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <h3>最近入荷した商品達</h3>
      <ul>
      <% @products.each do |product| %>
        <div class="inline-block">
          <%= attachment_image_tag product, :image, :fill, 100, 100, format:'jpeg', fallback:'no_image.jpg' %>
          <li class="link"><%= link_to product.product_name, product_path(product.id), class: "text" %></li>
          <p><%= tax_price(product.product_price) %>円(税込)</p>
        </div>
      <% end %>
      </ul>
    </div>
  </div>
</div>