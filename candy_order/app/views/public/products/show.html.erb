<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <h2>商品詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-8">
      <span>商品名</span>
      <h4><%= @product.product_name %></h4>
      <span>商品説明</span>
      <h4><%= @product.product_introduction %></h4>
      <span>制作会社</span>
      <h4><%= @product.product_company %></h4>
      <span>価格(税抜)</span>
      <h4><%= @product.product_price %>(円)</h4>
       <%= form_with model:@cart_item, url: add_product_path, local: true do |f| %>
       <%= f.select :amount, (1..30).each{ |n| n }, include_blank: "個数選択" %>
       <% end %>
    <%= link_to "商品一覧に戻る", products_path, class: "btn btn-info btn-sm" %>
    </div>
  </div>
</div>