<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-1">
      <table class="table">
          <thead>
            <tr>
              <th>商品</th>
              <th>価格</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="count">
          <% @products.each do |product| %>
             <tr>
               <th><%= link_to product.product_name,product_path(product.id)%></th>
               <th><%= product.product_price %></th>
               <th><button class="minus">－</button><input type="text" name="input01" value="0" readonly class="number" width:="" style="width: 50px;"><button class="plus">＋</button>（個）</th>
               <th><%= link_to "詳細ページ",product_path(product.id),class: "btn btn-info btn-sm" %></th>
              </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>


