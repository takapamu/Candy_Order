<div class="container">
  <ul>
      <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
         <%= render partial: 'layouts/flash' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6 offset-6">
        <h2>商品一覧 <i class="fas fa-candy-cane"></i></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <table class="table table-bordered genre-table">
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <li class="link"><%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match"),class: "text" %></li>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-9">
      <ul>
      <table class="table">
          <thead>
            <tr>
              <th><li class="link"><%= sort_link(@q, :product_name, "商品", class: "text") %></li></th>
              <th><li class="link"><%= sort_link(@q, :product_price, "価格", class: "text" )%></li></th>
              <th>個数</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="count">
            <% @products.each do |product| %>
              <tr>
                <th><li class="link"><%= link_to product.product_name,product_path(product.id), class: "text" %></li></th>
                <th><%= tax_price(product.product_price) %>円</th>
                <%= form_with model:@cart_product, url: add_product_path, 'data-turbolinks': false,local: true do |f| %>
                  <%= f.hidden_field :product_id, value:product.id %>
                  <th><%= f.number_field :quantity, style: "width: 5em;", min: "0" %>個</th>
                  <th><%= f.button :type => "submit" , class: "btn btn-danger w-60" do %>
                    <i class="fas fa-shopping-cart" style="color: #FFF;"> 商品を追加する</i>
                  <% end %></th>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-4">
        <%= paginate @products, theme: 'twitter-bootstrap-4'%>
    </div>
  </div>
  </ul>
</div>


