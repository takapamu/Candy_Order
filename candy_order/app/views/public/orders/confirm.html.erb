<div class="container">
  <div class="row">
    <div class="col-7 offset-1">
      <%= render partial: 'layouts/flash' %>
      <h2>この内容で発注しますか？</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>価格(税抜)</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody id="count">
          <% @cart_products.each do |cart_product| %>
            <tr>
              <th><%= cart_product.product.product_name %></th>
              <th><%= cart_product.product.product_price %>円</th>
              <%= form_with(url: update_product_path, method: :post, local: true) do |f| %>
                 <%= f.hidden_field :product_id, value: cart_product.product.id %>
                 <th><%= f.number_field :quantity, value: cart_product.quantity, min: "0"  %>個</th>
                 <th><%= f.submit "更新する" %></th>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h3>合計金額　<%= tax_total_price(@cart_products) %>円</h3>
      <%= form_with model:@order, local:true do |f| %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>