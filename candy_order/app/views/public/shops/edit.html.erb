<div class="container">
  <ul>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
         <%= render partial: 'layouts/flash' %>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-1">
        <h2>店舗編集 <i class="fas fa-store-alt"></i></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-3">
      <%= form_with model:@shop, local:true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <table class="table table-borderless">
          <tr>
            <td><lebel>氏名</lebel></td>
            <td><%= f.text_field :name,class:"form-control"  %></td>
           </tr>
           <tr>
            <td><lebel>郵便番号</lebel></td>
            <td><%= f.text_field :postal_code, class:"form-control"  %></td>
           </tr>
           <tr>
             <td><lebel>住所</lebel></td>
             <td><%= f.text_field :address,class:"form-control" %></td>
           </tr>
           <tr>
             <td><lebel>電話番号</lebel></td>
             <td><%= f.telephone_field :telephone_number,class:"form-control"  %></td>
           </tr>
           <tr>
             <td><lebel>メールアドレス</lebel></td>
             <td><%= f.email_field :email,class:"form-control"  %></td>
            </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
            <div class="form-group" style="text-align: center; padding-right: 30px;">
            <%= f.submit "編集内容を保存",class: "btn btn-outline-dark"%>
            </div>
      <% end %>
      </div>
    </div>
  </ul>
</div>

  