<% if shop_signed_in? %>
  <% if current_shop.already_favorited?(product)%>
   <%= link_to product_favorites_path(product),method: :delete,remote: true do %>
     <i class="fas fa-heart fa-2x size"></i>
   <% end %>
  <% else %>
    <%= link_to product_favorites_path(product),method: :post,remote: true do %>
      <i class="far fa-heart fa-2x size"></i>
    <% end %>
   <% end %>
<% end %>