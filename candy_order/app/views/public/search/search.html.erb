<div class="container">
  <ul>
    <div class="row">
      <div class="col-10 offset-1">
        <% if @datas.empty? %>
          <h2>該当する商品はありません</h2>
        <% end %>
          <% @datas.each do |data| %>
            <div class="inline-block">
              <%= link_to product_path(data.id) do %>
                <%= attachment_image_tag data, :image, size: "190x150", class: "img_hover" %><br>
              <% end %>
               <li class="link"><%= link_to data.product_name, product_path(data.id), class: "text" %></li><br>
            </div>
          <% end %>
      </div>
    </div>
  </ul>
</div>
