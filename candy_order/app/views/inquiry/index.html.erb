<div class="container">
  <ul>
    <div class="row">
      <div class="col-7 offset-1">
        <h2>お問い合わせ</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-2">
    <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
      <% if @inquiry.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
            <% @inquiry.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
        </div>
      <% end %>
        <table class="table">
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, class: "form-control", style: "width: 90%;" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, class: "form-control", style: "width: 90%;"  %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class: "form-control", style: "width: 90%;"  %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-5">
        <%= f.submit '送信', class: 'btn btn-primary btn-lg' %>
    <% end %>
      </div>
    </div>
  </ul>
</div>