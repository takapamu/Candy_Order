<div class="container">
  <ul>
    <div class="row">
      <div class="col-7 offset-1">
        <h2>お問い合わせ</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-7 offset-2">
        <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
          <table class="table">
            <tr>
              <th>名前</th>
              <td>
                <%= f.hidden_field :name %>
                <%= @inquiry.name %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= f.hidden_field :email %>
                <%= @inquiry.email %>
              </td>
            </tr>
            <tr>
              <th>お問い合わせ内容</th>
              <td>
                <%= f.hidden_field :message %>
                <%= simple_format(@inquiry.message) %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-7 offset-5">
          <%= f.submit '送信', class: 'btn btn-primary btn-lg' %>
        <% end %>
      </div>
    </div>
  </ul>
</div>