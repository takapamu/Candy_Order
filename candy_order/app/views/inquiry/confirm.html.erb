<div class="container">
  <ul>
    <div class="row">
      <div class="col-sm-7 offset-4">
        <p style="font-size: x-large;">この内容で送信しますか？</p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-7 offset-3" style="margin-top: 30px;">
        <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
          <table class="table table-borderless">
            <tr>
              <th>名前</th>
              <td>
                <%= f.hidden_field :name %>
                <%= @inquiry.name %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= f.hidden_field :email %>
                <%= @inquiry.email %>
              </td>
            </tr>
            <tr>
              <th>お問い合わせ内容</th>
              <td>
                <%= f.hidden_field :message %>
                <%= simple_format(@inquiry.message) %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-7 offset-5">
          <input type="submit" value="送信する" class="submitbtn"/>
        <% end %>
      </div>
    </div>
  </ul>
</div>