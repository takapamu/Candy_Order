<header class="visible">
  <nav class="navbar">
    <div class="container">
       <ul class="nav">
        <li><a href="/">HOME</a></li>
        <% if shop_signed_in? %>
          <% if unchecked_notifications.any? %>
              <i class="fa fa-circle" style="color: gold;"></i>
          <% end %>
          <li>
              <%= link_to "通知", notifications_path, class: "btn-default" %>
          </li>
          <li><%= link_to ' マイページ', shop_path(current_shop)%></li>
          <li><%= link_to ' 商品一覧', products_path %></li>
          <li><%= link_to ' 注文商品', cart_path(current_shop) %></li>
          <li><%= link_to ' ログアウト', destroy_shop_session_path, method: :delete %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to ' 店舗一覧', admin_shops_path %></li>
          <li><%= link_to ' 商品一覧', admin_products_path %></li>
          <li><%= link_to ' ジャンル一覧', admin_genres_path %></li>
          <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to ' 商品一覧', products_path %></li>
          <li><%= link_to ' 新規登録', new_shop_registration_path %></li>
          <li><%= link_to ' ログイン', new_shop_session_path  %></li>
        <% end %>
       </ul>
     </div>
   </nav>
</header>

