<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-info">
    <div class="container">
      <a class="navbar-brand" href="/"><span>CandyOrder</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if shop_signed_in? %>
          <li class="link"><%= link_to ' マイページ', shop_path(current_shop) , class: "fas fa-users-cog"%></li>
          <li class="link"><%= link_to ' 商品一覧', products_path ,class: "fas fa-candy-cane"%></li>
          <li class="link"><%= link_to ' 注文商品', cart_path(current_shop), class: "fas fa-book-open" %></li>
          <li class="link"><%= link_to ' ログアウト', destroy_shop_session_path, method: :delete, class: "fas fa-user" %></li>
        <% elsif admin_signed_in? %>
          <li class="link"><%= link_to ' 店舗一覧', admin_shops_path,class: "fas fa-store-alt" %></li>
          <li class="link"><%= link_to ' 商品一覧', admin_products_path ,class: "fas fa-candy-cane"%></li>
          <li class="link"><%= link_to ' ジャンル一覧', admin_genres_path ,class: "fas fa-candy-cane"%></li>
          <li class="link"><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: "fas fa-user" %></li>
        <% else %>
          <li class="link"><%= link_to ' 商品一覧', products_path ,class: "fas fa-candy-cane"%></li>
          <li class="link"><%= link_to ' 新規登録', new_shop_registration_path, class: "fas fa-users" %></li>
          <li class="link"><%= link_to ' ログイン', new_shop_session_path, class: "fas fa-user-plus" %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>